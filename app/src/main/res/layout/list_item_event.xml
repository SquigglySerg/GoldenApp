<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="false"
    android:animateLayoutChanges="true"
    android:padding="4dp"
    android:focusable="false"
    android:visibility="visible"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:animateLayoutChanges="true"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/list_item_event_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:animateLayoutChanges="true"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="Event Headline"/>

        <TextView
            android:id="@+id/list_item_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/list_item_event_headline"
            android:animateLayoutChanges="true"
            android:padding="6dp"
            android:textAlignment="textEnd"
            tools:text="Event Date"/>

        <TextView
            android:id="@+id/list_item_full_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_event_headline"
            android:animateLayoutChanges="true"
            android:padding="6dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
